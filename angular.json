{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "@ngneat/guard": {
      "projectType": "library",
      "root": "projects/ngneat/guard",
      "sourceRoot": "projects/ngneat/guard/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ngneat/guard/tsconfig.lib.json",
            "project": "projects/ngneat/guard/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngneat/guard/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ngneat/guard/src/test.ts",
            "tsConfig": "projects/ngneat/guard/tsconfig.spec.json",
            "karmaConfig": "projects/ngneat/guard/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["projects/ngneat/guard/tsconfig.lib.json", "projects/ngneat/guard/tsconfig.spec.json"],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  },
  "defaultProject": "@ngneat/guard"
}
